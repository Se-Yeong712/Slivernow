<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="s2017s16.kr.hs.mirim.silvernow.exercise.body.BodySuperExerciseActivity"
    android:orientation="vertical"
    android:background="@color/BackGround">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="SILVER NOW"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="390px"
            />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="40dp"
            android:padding="10dp"
            android:background="@drawable/tab3_btn"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="슈퍼맨 운동"
                android:textColor="#000000"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/gif"
                android:layout_width="200dp"
                android:layout_height="200dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                >
                <TextSwitcher
                    android:id="@+id/texts_num_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/textview_num_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/colorAccent"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        />
                </TextSwitcher>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="세트"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    />

                <TextSwitcher
                    android:id="@+id/texts_num_set_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textview_num_set_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/colorAccent"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        />
                </TextSwitcher>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="번 남았습니다"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    />
            </LinearLayout>
            <!--
            <ImageView
                android:id="@+id/count_gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:foregroundGravity="center" />
            -->

            <Button
                android:id="@+id/b_stop"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/exercise_start_btn"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="노래 멈추기"
                android:textColor="#ffffff"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/b_main"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/exercise_start_btn"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="운동 그만하기"
                android:textColor="#ffffff"
                android:textSize="25sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
