<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="s2017s16.kr.hs.mirim.silvernow.EyeExerciseActivity"
    android:orientation="vertical"
    android:background="@color/BackGround">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/tab3_btn">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="눈 운동"
            android:textColor="#000000"
            android:textSize="17pt"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/gif"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:foregroundGravity="center" />
            <Button
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/ring"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/count_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:foregroundGravity="center" />
        <Button
            android:id="@+id/b_stop"
            android:layout_marginBottom="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/exercise_start_btn"
            android:layout_gravity="center"
            android:text="노래 멈추기"
            android:textSize="25dp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/b_main"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/exercise_start_btn"
            android:layout_gravity="center"
            android:text="메인화면으로 돌아가기"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
</LinearLayout>
