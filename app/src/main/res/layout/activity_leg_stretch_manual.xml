<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="s2017s16.kr.hs.mirim.silvernow.LegStretchManualActivity"
    android:orientation="vertical"
    android:background="#E8E8E8"
    android:layout_gravity="center">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar">
        <ImageView
            style="@style/ToolbarLogo"/>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        style="@style/ExerciseManualFrame">

        <LinearLayout
            style="@style/ExerciseManualLinear1">
            <ScrollView
                style="@style/ExerciseManualScroll">
                <LinearLayout
                    style="@style/ExerciseManualLinear2">
                    <TextView
                        style="@style/ExerciseManualTitle"
                        android:text="다리 짧게 누르기" />
                    <ImageView
                        style="@style/ExerciseManualImage"
                        android:src="@drawable/leg"/>

                    <TextView
                        android:id="@+id/t_name"
                        style="@style/ExerciseManualText"
                        android:text="1. 양 다리를 어깨 넓이로 벌려줍니다.\n2. 먼저 오른쪽 손을 오른쪽 무릎 부근에 갖다 대고 오른쪽 다리는 바깥쪽으로 왼쪽 다리는 안쪽으로 굽혀줍니다.\n3. 오른쪽 무릎을 짚은 오른쪽 손으로 오른쪽 다리를 눌러줍니다.\n4. 왼쪽도 똑같이 반복합니다." />

                    <Button
                        android:id="@+id/b_exercise"
                        style="@style/ExerciseManualStart"
                        android:background="@drawable/exercise_start_btn"
                        android:text="지금 시작하기" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
