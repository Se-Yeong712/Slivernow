<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="s2017s16.kr.hs.mirim.silvernow.MainActivity"
    android:orientation="vertical"
    android:background="@color/BackGround">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="SILVER NOW"
            android:textSize="20dp"

            android:textAlignment="center"
            android:layout_marginLeft="350px"
            />
    </android.support.v7.widget.Toolbar>

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"/>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center">
            //tab1
            <LinearLayout
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-10dp"
                >
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp">
                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="430dp"
                    android:background="@drawable/tab3_btn"
                    android:orientation="vertical"
                    android:paddingBottom="30dp">
                    <!--<ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/obstacle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공사중입니다"
                        android:textColor="#000000"
                        android:textSize="30dp"/>-->
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:text="오늘 날짜"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/article_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="27dp"
                        android:text="꽈당! 집안도 위험, 노인 건강 관리 낙상사고 예방법"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="50dp"/>

                    <TextView
                        android:id="@+id/article_content_sub1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="27dp"
                        android:text="1) 규칙적인 운동"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/article_content1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:text="균형 감각과 신체 조절 능력을 개선하기 위해 규칙적인 신체 활동에 참여합니다."
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/article_content_sub2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="27dp"
                        android:text="2) 위험 요인 제거"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/article_content2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:text="발에 걸려 넘어질 수 있는 전선, 책, 신발 등 주변 환경에서 위험 요인이 되는 것들을 제거합니다."
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/article_content_sub3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="27dp"
                        android:text="3) 약 살펴보기"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/article_content3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:text="약사와 함께 현재 복용하고 있는 약, 집에 보관하고 있는 상비약을 살펴보세요. 어떤 약들을 현기증을 유발하거나 졸리게 만들지도 모릅니다."
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/article_content_sub4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="27dp"
                        android:text="4) 정기적인 시력검사"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/article_content4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:text="시력이 떨어져 장애물을 발견하지 못하는 것도 낙상의 원인이 되는 만큼 1년에 한 번은 시력검사를 받도록합니다"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
                </ScrollView>
            </LinearLayout>


            //tab2
            <LinearLayout
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">

                    <Button
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/b_current"
                        android:layout_width="350dp"
                        android:layout_height="199dp"
                        android:background="@drawable/tab3_btn"
                        android:drawableTop="@drawable/current"
                        android:padding="5dp"
                        android:layout_margin="4dp"
                        android:text="나의 운동 현황"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        />

                    <Button
                        android:id="@+id/b_alarm"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="350dp"
                        android:layout_height="199dp"
                        android:background="@drawable/tab3_btn"
                        android:drawableTop="@drawable/alarm"
                        android:padding="5dp"
                        android:layout_margin="4dp"
                        android:text="나의 운동 알람"
                        android:textColor="#000000"
                        android:textSize="25sp"/>
                </LinearLayout>
            </LinearLayout>


            //tab3
            <LinearLayout
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center"
                    >

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        >

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            >

                            <Button
                                android:id="@+id/b_eye"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="160dp"
                                android:layout_height="220dp"
                                android:background="@drawable/tab3_btn"
                                android:drawableTop="@drawable/eye"
                                android:paddingTop="15dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="10dp"
                                android:layout_margin="10dp"
                                android:text="눈"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                />

                            <Button
                                android:id="@+id/b_gym"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="160dp"
                                android:layout_height="220dp"
                                android:background="@drawable/tab3_btn"
                                android:drawableTop="@drawable/leg"
                                android:paddingTop="15dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="10dp"
                                android:layout_margin="10dp"
                                android:text="다리"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/b_eye"
                                />

                            <Button
                                android:id="@+id/b_arm"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="160dp"
                                android:layout_height="220dp"
                                android:background="@drawable/tab3_btn"
                                android:drawableTop="@drawable/arm"
                                android:paddingTop="15dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="10dp"
                                android:layout_margin="10dp"
                                android:text="팔"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/b_eye"
                                />

                            <Button
                                android:id="@+id/b_leg"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="160dp"
                                android:layout_height="220dp"
                                android:background="@drawable/tab3_btn"
                                android:drawableTop="@drawable/body"
                                android:paddingTop="15dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="10dp"
                                android:layout_margin="10dp"
                                android:text="맨몸체조"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                app:layout_constraintLeft_toRightOf="@id/b_arm"
                                app:layout_constraintTop_toBottomOf="@id/b_gym"
                                />
                        </android.support.constraint.ConstraintLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </TabHost>

</LinearLayout>
